    .module('needy',
    [
        'ngMaterial',
        'duParallax',
        'ui.router',
        'angular-loading-bar', 
        'ngAnimate'
    ]
);

app.config(function(
					$stateProvider,
                	$urlRouterProvider
            	)
                {
                      //$urlRouterProvider.otherwise("/");

			      $stateProvider
			        .state('home', {
                  	   url: ":r_id",
                       templateUrl:
                        function ($stateParams) {
                          r_id= $stateParams.r_id;
                          return '/home/index?r_id='+r_id
                        }
			        })
			          .state('inicio1', {
			              url: "/inicio1",
			              template: "route1.list.html"
			          })
			          
			        .state('inicio2', {
			            url: "/inicio2",
