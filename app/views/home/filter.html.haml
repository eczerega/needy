-begin
  .row.resume-project
    .col-md-5.image-project
      =image_tag SocialsNeedImage.where(:socials_need_id => @social_needs.id).take.image_content
    .col-md-7
      .row
        .col-md-12
          %h4.project-title
            =@social_needs.name
      .tags
        %span
          %i.fa.fa-map-marker
          =@social_needs.latitude
        %span
          %i.fa.fa-tag
          =@social_needs.category.name  
      .row
        .col-md-12.project-content
          %p
            =@social_needs.description
          .pull-bottom
            %span
              %i.fa.fa-volume-up{:style =>"cursor: pointer"}
              Hazte notar
            %span
              %i.fa.fa-volume-off{:style =>"cursor: pointer"}
              No es tan importante
